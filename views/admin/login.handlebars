
<div class="admin-login-container">
    <div class="admin-login-card">

        <h1>Área Administrativa</h1>
        <p class="subtitle">Acesso restrito</p>

        {{#if error}}
            <div class="login-error">{{error}}</div>
        {{/if}}

        <form action="/admin/login" method="POST" class="admin-login-form">

            <label for="username">Utilizador</label>
            <input type="text" id="username" name="username" placeholder="admin" required>

            <label for="password">Senha</label>
            <input type="password" id="password" name="password" placeholder="••••••••" required>

            <button type="submit" class="admin-btn">Entrar</button>
        </form>

    </div>
</div>

<style>

/* Center layout */
.admin-login-container {
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f3f4f6;
}

/* Card */
.admin-login-card {
    width: 380px;
    background: #fff;
    padding: 2rem 2.5rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    text-align: center;
}

/* Title */
.admin-login-card h1 {
    font-size: 1.8rem;
    color: #1a1a1a;
    margin-bottom: 0.3rem;
}

.subtitle {
    font-size: 0.95rem;
    color: #666;
    margin-bottom: 1.5rem;
}

.login-error {
    background: #ffdddd;
    padding: 0.7rem 1rem;
    border-left: 4px solid #e00;
    color: #a00;
    border-radius: 4px;
    margin-bottom: 1rem;
    text-align: left;
}

/* Form */
.admin-login-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.admin-login-form input {
    padding: 0.8rem;
    border: 1px solid #cccccc;
    border-radius: 6px;
    font-size: 1rem;
}

/* Button */
.admin-btn {
    padding: 0.9rem;
    background: #0057D9;
    color: #fff;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 1.1rem;
    transition: 0.2s;
}

.admin-btn:hover {
    background: #0042A8;
}

</style>
